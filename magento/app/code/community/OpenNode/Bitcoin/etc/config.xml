<config>
    <modules>
        <OpenNode_Bitcoin>
            <version>1.0.0.0</version>
        </OpenNode_Bitcoin>
    </modules>
    <global>
        <helpers>
            <opennode_bitcoin>
                <class>OpenNode_Bitcoin_Helper</class>
            </opennode_bitcoin>
        </helpers>
        <blocks>
            <opennode_bitcoin>
                <class>OpenNode_Bitcoin_Block</class>
            </opennode_bitcoin>
        </blocks>
        <models>
            <opennode_bitcoin>
                <class>OpenNode_Bitcoin_Model</class>
            </opennode_bitcoin>
        </models>
    </global>

    <default>
        <payment>
            <opennode_bitcoin>
                <active>1</active>
                <model>opennode_bitcoin/bitcoin</model>
                <order_status>pending</order_status>
                <title>Bitcoin</title>
                <allowspecific>0</allowspecific>
                <payment_action>initialize</payment_action>
            </opennode_bitcoin>
        </payment>
    </default>

    <frontend>
        <layout>
            <updates>
                <opennode_bitcoin>
                    <file>opennodebitcoin.xml</file>
                </opennode_bitcoin>
            </updates>
        </layout>
        <routers>
            <opennode_bitcoin>
                <use>standard</use>
                <args>
                    <module>OpenNode_Bitcoin</module>
                    <frontName>opennode_bitcoin</frontName>
                </args>
            </opennode_bitcoin>
        </routers>
    </frontend>
</config>